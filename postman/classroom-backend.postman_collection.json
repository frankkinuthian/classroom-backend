{
  "info": {
    "name": "Classroom Backend API",
    "description": "Collection for testing the classroom-backend endpoints currently defined in src/server.ts and src/index.ts.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                ""
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Subjects",
      "item": [
        {
          "name": "GET /api/subjects (default pagination)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/subjects",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "subjects"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const body = pm.response.json();",
                  "pm.test('Response has data array', function () {",
                  "  pm.expect(body).to.have.property('data');",
                  "  pm.expect(body.data).to.be.an('array');",
                  "});",
                  "pm.test('Response has pagination object', function () {",
                  "  pm.expect(body).to.have.property('pagination');",
                  "  pm.expect(body.pagination).to.be.an('object');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /api/subjects (search + department + paging)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/subjects?search={{searchTerm}}&department={{departmentName}}&page={{page}}&limit={{limit}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "subjects"
              ],
              "query": [
                {
                  "key": "search",
                  "value": "{{searchTerm}}"
                },
                {
                  "key": "department",
                  "value": "{{departmentName}}"
                },
                {
                  "key": "page",
                  "value": "{{page}}"
                },
                {
                  "key": "limit",
                  "value": "{{limit}}"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const body = pm.response.json();",
                  "pm.test('Pagination reflects requested limit', function () {",
                  "  pm.expect(body.pagination.limit).to.eql(Number(pm.collectionVariables.get('limit')));",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "searchTerm",
      "value": "math"
    },
    {
      "key": "departmentName",
      "value": "science"
    },
    {
      "key": "page",
      "value": "1"
    },
    {
      "key": "limit",
      "value": "10"
    }
  ]
}
